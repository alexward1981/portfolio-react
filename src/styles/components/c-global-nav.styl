.c-global-nav {
  float: left;
  font-size: $innerCore;
  padding-left:$hspacing*2;
  &_toggle {
    display: none;
  }
  li {
    display: inline-block;
    a {
      display: block;
      text-transform: capitalize;
      padding: 1rem;
      color: $light;
      text-shadow: 1px 1px 1px rgba($dark, .2);
      &:hover,
      &:focus {
        color: #fff;
        background-color: rgba($dark, .2)
      }
    }
  }
}
