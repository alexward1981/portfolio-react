.c-global-footer {
  display: none;
  +above(m) {
    display: block;
  }
  background-color: $dark;
  color: $light;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  z-index: 100;

  a {
    font-size: $smallCopy;
    color: $light;
    &:hover {
      text-decoration: underline;
    }
  }
}
