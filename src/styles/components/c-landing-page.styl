.c-landing-page {
  position: absolute;
  top:0;
  left:0;
  width: 100%;
  padding-bottom: 3vh;
  overflow: auto;
  pageSetup($home);
  .c-page-content&_content {
    text-align: center;
    // This page uses custom header sizes
    h1 {
      position: relative;
      z-index: 10;
      font-size: $crust*1.5;
      margin-bottom: 0;
      +above(l) {
        font-size: 10rem;
      }
      @media screen and (orientation: landscape) and (max-height: 700px) {
        & {
          text-align: right;
          font-size: $crust*1.5;
          margin: $spacing*2 $spacing*2 0;
        }
      }
    }
    h2 {
      position: relative;
      z-index: 10;
      font-size: $mantle*1.5;
      +above(l) {
        font-size: 5rem;
      }
      @media screen and (orientation: landscape) and (max-height: 700px) {
        & {
          text-align: right;
          font-size: $mantle*1.5;
          margin-right: 2rem;
        }
      }
    }
    img {
      position: absolute;
      margin-right: -12.5%;
      right: 50%;
      bottom: 29vh;
      width: 22%;
      z-index: 5;
      +above(900px) {
        width: 15%;
        margin-right: -8%;
        bottom: 25vh;
      }
      +above(xl) {
        margin-right: 0;
        right: $hspacing;
        bottom: $vspacing*3;
        span(1/5);
      }
      @media screen and (orientation: landscape) and (max-height: 700px) {
        & {
          bottom: -15vh;
          left: 0;
          transform:rotate(20deg);
          width: 20%;
        }
      }
    }
  }
  &_backdrop {
    position: absolute;
    top:0;
    width: 100vw;
    height: 100%;
    &:before {
      content: "";
      position: absolute;
      top: 8%;
      right: 0;
      width: 100vw;
      height: 44vh;

      @media screen and (min-width: 720px) and (min-height: 760px) {
        & {
          background-image: url(../images/london-backdrop.svg);
          background-size: contain;
          background-repeat: no-repeat;
          background-position: bottom;
        }
      }
    }

    &:after {
      content: "";
      background-color: #5E8A46;
      width: 100vw;
      height: 45vh;
      position: absolute;
      left: 0;
      bottom: 0;
      z-index: 1;
      addPaper();
      +above(m) {
        height: 35vh;
      }
      @media screen and (min-width: 720px) and (max-height: 700px) {
        & {
          height: 50vh;
        }
      }
    }
    & > div {
      visibility: hidden;
      width: 100vw;
      position: absolute;
      left: 0;
      background: linear-gradient(to bottom, rgba(84,61,41,0) 30%,rgba(84,61,41,1) 30%,rgba(84,61,41,1) 38%,rgba(58,132,195,1) 38%,rgba(48,96,160,1) 49%,rgba(37,69,124,1) 80%,rgba(38,85,139,1) 100%);
      z-index: 2;
      top: 25%;
      height: 35%;

      +above(m) {
        top: 40%;
        height: 283px;
      }

      @media screen and (min-width: 720px) and (min-height: 760px) {
        & {
          visibility: visible;
        }
      }

      &:after {
        content: "";
        width: 100vw;
        height: 40%;
        margin-top: 2vh;
        position: absolute;
        left: 0;
        bottom: -1px;
        background-image: url(../images/london-path.svg);
        background-repeat: repeat-x;
        background-size: auto 100%;
        background-position: bottom;

        z-index: 3;
        +above(m) {
          height: 290px;
        }
      }
    }
  }
}
