.c-landing-page {
  position: absolute;
  top:0;
  left:0;
  width: 100%;
  padding-bottom: 3vh;
  overflow: auto;
  pageSetup($home);
  .c-page-content&_content {
    text-align: center;
    // This page uses custom header sizes
    h1 {
      font-size: 10rem;
    }
    h2 {
      font-size: 5rem;
    }
    img {
      position: absolute;
      right: $hspacing;
      bottom: $vspacing*3;
      width: 15%;
    }
  }
  .o-btn {
    button(#92b82a);
    margin-right: 1rem;
  }
  .o-btn + .o-btn {
    button(#b0c331);
  }
  &_backdrop {
    position: absolute;
    top:0;
    width: 100vw;
    height: 100%;
    &:before {
      content: "";
      position: absolute;
      top: 8%;
      right: 0;
      width: 100vw;
      height: 44vh;

      @media screen and (min-width: 720px) and (min-height: 760px) {
        & {
          background-image: url(../images/london-backdrop.svg);
          background-size: contain;
          background-repeat: no-repeat;
          background-position: bottom;
        }
      }
    }

    &:after {
      content: "";
      background-color: #5E8A46;
      width: 100vw;
      height: 45vh;
      position: absolute;
      left: 0;
      bottom: 0;
      z-index: 1;
      addPaper();
      +above(m) {
        height: 35vh;
      }
      @media screen and (min-width: 720px) and (max-height: 700px) {
        & {
          height: 50vh;
        }
      }
    }
    & > div {
      visibility: hidden;
      width: 100vw;
      position: absolute;
      left: 0;
      background: linear-gradient(to bottom, rgba(84,61,41,0) 30%,rgba(84,61,41,1) 30%,rgba(84,61,41,1) 38%,rgba(58,132,195,1) 38%,rgba(48,96,160,1) 49%,rgba(37,69,124,1) 80%,rgba(38,85,139,1) 100%);
      z-index: 2;
      top: 25%;
      height: 35%;

      +above(m) {
        top: 40%;
        height: 283px;
      }

      @media screen and (min-width: 720px) and (min-height: 760px) {
        & {
          visibility: visible;
        }
      }

      &:after {
        content: "";
        width: 100vw;
        height: 40%;
        margin-top: 2vh;
        position: absolute;
        left: 0;
        bottom: -1px;
        background-image: url(../images/london-path.svg);
        background-repeat: repeat-x;
        background-size: auto 100%;
        background-position: bottom;

        z-index: 3;
        +above(m) {
          height: 290px;
        }
      }
    }
  }
}
