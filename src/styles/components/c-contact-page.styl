.c-contact-page {
  pageSetup($contact);
  a {
    color: lighten($contact, 60%);
    &:hover {
      text-decoration: underline;
    }
  }
  &_content {
    .details {
      span {
        display: block;
        padding: $vspacing 0;
      }
    }
    img {
      width: 100%;
      float:left;
      margin-right: $hspacing*2;
      +above('s') {
        width: 50%;
        float: right;
        margin: 0;
        margin-right: $hspacing*2;
      }
      +above(m) {
        width: 25%;
        margin-bottom: $vspacing;
      }
    }
  }
  .btn-ico {
    button(darken($contact,20%));
  }
}
