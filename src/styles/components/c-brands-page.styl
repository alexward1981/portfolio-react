.c-brands-page {
  pageSetup($brands)
  a {
    color: lighten($brands, 60%);
    &:hover {
      text-decoration: underline;
    }
  }
  &_content {
    img {
      display: none;
      +above(m) {
        display: block;
        width: 50%;
        float: right;
        margin: 0;
        margin-right: $hspacing*2;
      }
      +above(m) {
        width: 25%;
        margin-bottom: $vspacing;
      }
    }
  }
}
