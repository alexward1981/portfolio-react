.c-availability {
  cf();
  +above(xl) {
    col(4/5);
  }
  position: absolute;
  z-index: 100;
  left: $hspacing;
  +above(m) {
    left: $hspacing * 3;
  }
  bottom: $vspacing * 5;
  &_status-text {
    color: $light;
    font-size: $crust;
    text-align: center;
    +above(m) {
      text-align: left;
    }
    +above(l) {
      font-size: $crust*1.3;
    }
    margin-bottom: $vspacing*2;
  }
  &_cta {
    .o-btn {
      button(#92b82a);
      text-align: center;
      display: block;
      margin-right: $hspacing;
      margin-bottom: $vspacing;
      +above(xl) {
        display: inline-block;
      }
    }
    .o-btn + .o-btn {
      button(#b0c331);
      display: block;
      +above(xl) {
        display: inline-block;
      }
    }
  }
  div {
    +above(m) {
      col(1/2);
    }
    +above(xl) {
      col(1);
    }
  }
}
