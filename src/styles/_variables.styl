// This file is to store commonly used variables.

// Colour Pallet
$light = #fff;
$dark = #000;

// Main site colours
$primary   = $dark;
$secondary = $light;

$home = #8DCCF0;
$about = #E89D25;
$skills = #3d82cd;
$brands = #cd4a3d;
$testimonials = #7a9f2c;
$contact = #8856bb;
$generic = #222;

// Size defaults
$baseFont   = 1rem;
$lineHeight = 1;
$brad       = 3px; // border-radius
$spacing    = 1rem;
$hspacing   = $spacing;
$vspacing   = $spacing;

// Heading levels (names are abstracted)
$crust     = $baseFont * 3.6;
$mantle    = $baseFont * 2.4;
$outerCore = $baseFont * 1.9;
$innerCore = $baseFont * 1.6;

// Standard Text
$lead      = $mantle
$bodyCopy  = $baseFont *1.4
$smallCopy  = $baseFont * 1.2;

// Rupture scales
rupture.scale       = 320px 410px 500px 720px 1080px 1280px 1700px;
rupture.scale-names = 'xxs' 'xs' 's' 'm' 'l' 'xl' 'xxl';
