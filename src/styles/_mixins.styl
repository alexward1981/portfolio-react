ff-title()
  font-family: 'Arvo', sans-serif;
  font-weight: bold;
ff-body()
  font-family: 'Lato', sans-serif;
  font-weight: normal;
  font-size: $baseFont*1.6
  line-height: $lineHeight*1.5;
  margin-bottom: $hspacing;
  +above(m) {
    font-size: $bodyCopy;
  }
button(bgc)
  display: inline-block;
  color: #fff;
  background-color: bgc;
  padding: $vspacing $hspacing*2
  border: 0;
  font-size: $outerCore;
  cursor: pointer;
  border-bottom: 3px solid darken(bgc, 20%);
  &:hover {
    border-color: darken(bgc, 40%);
    background-color: lighten(bgc, 10%);
  }
  &.disabled {
    cursor: auto;
    background: desaturate(bgc, 60%);
    opacity: .6;
  }
addPaper() {
  background-image: url('/static/images/paper.png');
  background-blend-mode: multiply;
}
pageSetup(theme) {
  cf();
  background-color: theme;
  padding: 4.5vh 0;
  min-height: 100vh;
  addPaper();
}
