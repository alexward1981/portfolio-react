ff-title()
  font-family: 'Arvo', sans-serif;
  font-weight: bold;
ff-body()
  font-family: 'Lato', sans-serif;
  font-weight: normal;
  font-size: $baseFont*1.6
  +above(m) {
    font-size: $bodyCopy;
  }
button()
  display: inline-block;
  color: #fff;
  background: $buttonColor;
  padding: $vspacing $hspacing*2
  border: 0;
  font-size: $smallCopy;
  cursor: pointer;
  border-bottom: 3px solid darken($buttonColor, 40%);
  &:hover {
    background: 3px solid darken($buttonColor, 40%);
    border-bottom: $buttonColor;
  }
  &.disabled {
    cursor: auto;
    background: desaturate($buttonColor, 60%);
    opacity: .6;
  }

addPaper() {
  background-image: url('/static/images/paper.png');
  background-blend-mode: multiply;
}
